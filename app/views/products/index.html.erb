<div class="createp">
  <h1><%= link_to 'Let\'s Sell Something!', new_product_path %></h1>

  <h4>Just Want to Browse? Check Out Our Products!</h4>
</div>


<div class="products">

    <% @products.each do |product| %>
 <div class="productdescrip">
    <%= image_tag product.photo %> 
    <p><h4> <%= product.name %></h4></p>
    <!-- <p> <%= product.description %></p> -->
    <p> <%=  "$" + product.price_conversion %></p>
    <p><h6><%= link_to 'Show | ', product %>
