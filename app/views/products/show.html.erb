<div class="show_product">
<p id="notice"><%= notice %></p>

<p>
	<%= image_tag @product.photo %>
</p>

<p>
 <!--  <strong>Product Name:</strong><br> -->
  <h1><%= @product.name %></h1>
</p>
 <%if signed_in?%>
  <%= link_to "Remove", remove_from_cart_path(@product), method: :put, class:"btn" %>
  <%= link_to "Add to cart", add_to_cart_path(@product), method: :put, class:"btn" %>
 <%end%>

<p>
  <strong>Description:</strong><br>
  <%= @product.description %>
</p>

<p>
  <strong>Price</strong><br>
  <%= "$" + @product.price_conversion %>
</p>
<h5>Reviews</h5>
<% @product.reviews.each do |review| %>
<p>
<%= review.comment %>
<br>
Added on: <%= review.created_at %>
</p>
<% end %>
<p3>
<h3>Add Review</h3>

<h5>Add Review</h5>

<%= render 'reviews/form' %>
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
</p3>

</div>


